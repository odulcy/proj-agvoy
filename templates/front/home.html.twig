{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <h1>Liste des circuits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ville de départ</th>
                <th>Nombre de personnes</th>
                <th>Prix</th>
                <th>Voir en détail</th>
            </tr>
        </thead>
        <tbody>
          {% if programmationCircuits %}
          {% for progCircuit in programmationCircuits %}
            <tr>
                <td>{{ progCircuit.dateDepart|date("m/d/Y") }}</td>
                <td>{{ progCircuit.nombrePersonnes }}</td>
                <td>{{ progCircuit.prix }}</td>
                <td> <a href="{{ path('front_circuit_show', {id: progCircuit.circuit.id})
                    }}">Détails</a></td>
            </tr>
          {% endfor %}
          {% else %}
              <tr>
                  <td colspan="2">Aucun circuit trouvé.</td>
              </tr>
          {% endif %}
          </tbody>
      </table>

  {% endblock %} {# body #}
