<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
          {% block title %}
          Agence de Voyage GeorgiaTech
          {% endblock %}
        </title>
        {% block stylesheets %}
        {% endblock %}
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    </head>
    <body> 

    {% block menu %}
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <a class="navbar-brand" href="/">
        <img src="/assets/gt_flag.jpg" alt="Drapeau GoergiaTech" width="100">
      </a>
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#collapsibleNavbar" aria-expanded="false">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse" id="collapsibleNavbar" style="">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Accueil</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/home">Liste des circuits</a>
          </li>
        </ul>
      </div>  
    </nav>
    {% endblock %}
      
      <div class="container">
        {% block body %}
          {% block main %}
          {% endblock %} 
        {% endblock %}
      </div>

      {% block footer %}
      <div class="jumbotron" style="margin-bottom:0">
        <div class="row">
          <div class="col text-center"><a
               href="https://github.com/odulcy/proj-agvoy">Retrouvez-nous sur
               GitHub</a></div>
          <div class="col text-center">Copyright NathanaÃ«l DENIS & Olivier DULCY</div>
          <div class="col text-center">Team GeorgiaTech</div>
        </div>
      </div>
      {% endblock %}
    </body>
    {% block javascripts %}
    <script src="/js/sweetalert2.all.min.js"></script>
    {% for label, messages in app.flashes %}
      <script>
        $(document).ready(function(){
        {% for message in messages %}
        swal({
          type: '{{ label }}',
          title: '{{ message[0] }}',
          text: '{{ message[1] }}',
        })
        });
        {% endfor %}
      </script>
    {% endfor %}
    {% endblock %} {# javascripts #}
    {% block custompage_script %}
    {% endblock %} {# custompage_scripts #}
</html>
