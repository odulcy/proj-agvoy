{% extends 'base.html.twig' %}


{% block title %}Administration : Liste des étapes{% endblock %}

{% block main %}
    <h1>Administration : liste des étapes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumeroEtape</th>
                <th>VilleEtape</th>
                <th>NombreJours</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etape in etapes %}
            <tr>
                <td>{{ etape.id }}</td>
                <td>{{ etape.numeroEtape }}</td>
                <td>{{ etape.villeEtape }}</td>
                <td>{{ etape.nombreJours }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('admin_etape_show', {'id': etape.id})
                      }}"><i class="far fa-eye"></i> Afficher</a>
                    <a class="btn btn-warning" href="{{ path('admin_etape_edit', {'id': etape.id})
                      }}"><i class="far fa-edit"></i> Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune étape trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-sucess my-4"href="{{ path('admin_etape_new') }}"><i class="fas fa-plus-circle"></i> Créer une nouvelle étape</a>
{% endblock %}
