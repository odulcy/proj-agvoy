{% extends 'base.html.twig' %}

{% block title %}ProgrammationCircuit index{% endblock %}

{% block main %}
    <h1>Administration : liste des circuits programmés</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Circuit</th>
                <th>Date de départ</th>
                <th>Nombre de Personnes</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for programmation_circuit in programmation_circuits %}
            <tr>
                <td>{{ programmation_circuit.id }}</td>
                <td>{{ programmation_circuit.circuit.villeDepart }} - {{ programmation_circuit.circuit.villeArrivee }}</td>
                <td>{{ programmation_circuit.dateDepart ? programmation_circuit.dateDepart|date('d/m/Y') : '' }}</td>
                <td>{{ programmation_circuit.nombrePersonnes }}</td>
                <td>{{ programmation_circuit.prix }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('programmation_circuit_show', {'id': programmation_circuit.id}) }}"><i class="far fa-eye"></i> Voir</a>
                    <a class="btn btn-warning" href="{{ path('programmation_circuit_edit', {'id': programmation_circuit.id}) }}"><i class="far fa-edit"></i> Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success my-4" href="{{ path('programmation_circuit_new') }}"><i class="fas fa-plus-circle"></i> Programmer un circuit</a>
{% endblock %}
